{
  "name": "ontheway",
  "version": "0.1.0",
  "private": true,
  "description": "碰个头（OnTheWay）— 多人聚会协调平台",
  "scripts": {
    "dev:server": "pnpm --filter @ontheway/server dev",
    "dev:web": "pnpm --filter @ontheway/web dev",
    "build:shared": "pnpm --filter @ontheway/shared build",
    "build:server": "pnpm --filter @ontheway/server build",
    "build:web": "pnpm --filter @ontheway/web build",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:shared": "pnpm --filter @ontheway/shared test",
    "test:server": "pnpm --filter @ontheway/server test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean"
  },
  "engines": {
    "node": "24.x",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "devDependencies": {
    "@vercel/node": "^5.6.2"
  }
}
