.gathering-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
  margin-right: 16rpx;
}

.card-info {
  display: flex;
  gap: 32rpx;
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-icon {
  font-size: 28rpx;
}

.info-text {
  font-size: 28rpx;
  color: #6b7280;
}

.card-footer {
  padding-top: 24rpx;
  border-top: 1rpx solid #e5e7eb;
}

.invite-code {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.code-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.code-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #f2930d;
  letter-spacing: 4rpx;
}
