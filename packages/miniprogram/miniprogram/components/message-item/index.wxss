.message-item {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.message-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

.message-system .message-icon {
  background-color: #f3f4f6;
}

.message-join .message-icon {
  background-color: #ccfbf1;
}

.message-depart .message-icon {
  background-color: #dbeafe;
}

.message-arrive .message-icon {
  background-color: #ccfbf1;
}

.message-vote .message-icon,
.message-vote_result .message-icon {
  background-color: #ffedd5;
}

.message-reminder .message-icon,
.message-urgent .message-icon {
  background-color: #fee2e2;
}

.message-milestone .message-icon {
  background-color: #fef3c7;
}

.message-content {
  flex: 1;
}

.message-text {
  font-size: 28rpx;
  color: #1a1a1a;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.message-time {
  font-size: 24rpx;
  color: #9ca3af;
}
