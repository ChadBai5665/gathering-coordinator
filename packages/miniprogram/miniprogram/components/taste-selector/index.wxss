.taste-selector {
  width: 100%;
}

.taste-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.taste-item {
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  background-color: #f3f4f6;
  color: #6b7280;
  transition: all 0.2s;
}

.taste-item.selected {
  background-color: #ffedd5;
  color: #f2930d;
  font-weight: 500;
}

.taste-hint {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #9ca3af;
  text-align: right;
}
