.restaurant-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  display: flex;
  gap: 24rpx;
}

.card-rank {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.rank-1 {
  background: linear-gradient(135deg, #ffd700, #ffed4e);
  color: #7c2d12;
}

.rank-2 {
  background: linear-gradient(135deg, #c0c0c0, #e8e8e8);
  color: #4b5563;
}

.rank-3 {
  background: linear-gradient(135deg, #cd7f32, #e8a87c);
  color: #7c2d12;
}

.rank-other {
  background-color: #f3f4f6;
  color: #6b7280;
}

.card-content {
  flex: 1;
}

.restaurant-header {
  margin-bottom: 16rpx;
}

.restaurant-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.restaurant-type {
  font-size: 24rpx;
  color: #9ca3af;
}

.restaurant-info {
  display: flex;
  gap: 32rpx;
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.info-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.info-value {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

.score-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.score-label {
  font-size: 24rpx;
  color: #6b7280;
  white-space: nowrap;
}

.score-progress {
  flex: 1;
  height: 16rpx;
  background-color: #f3f4f6;
  border-radius: 8rpx;
  overflow: hidden;
}

.score-fill {
  height: 100%;
  background: linear-gradient(90deg, #f2930d, #fb923c);
  border-radius: 8rpx;
  transition: width 0.3s;
}

.score-value {
  font-size: 24rpx;
  color: #f2930d;
  font-weight: 600;
  min-width: 60rpx;
  text-align: right;
}

.vote-btn {
  width: 100%;
  height: 72rpx;
  background-color: #f2930d;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  margin: 0;
  padding: 0;
  line-height: 72rpx;
}

.vote-btn::after {
  border: none;
}
