.dashboard-page {
  min-height: 100vh;
  background-color: #f8f7f5;
  padding-bottom: 120rpx;
}

.content {
  padding: 32rpx;
  padding-top: calc(88rpx + var(--status-bar-height, 0rpx) + 32rpx);
}

.info-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.share-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #6b7280;
}

.info-value {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.code-box {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 8rpx 24rpx;
  background-color: #ffedd5;
  border-radius: 16rpx;
}

.code-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #f2930d;
  letter-spacing: 4rpx;
}

.copy-icon {
  font-size: 28rpx;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

.participants {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.participant-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
}

.participant-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #0d94f2, #60a5fa);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  flex-shrink: 0;
}

.participant-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.participant-name {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.vote-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #ffedd5;
}

.vote-header {
  margin-bottom: 16rpx;
}

.vote-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.vote-restaurant {
  margin-bottom: 24rpx;
}

.vote-restaurant-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #f2930d;
}

.vote-progress {
  margin-bottom: 24rpx;
}

.vote-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.vote-agree {
  color: #14b8a6;
}

.vote-disagree {
  color: #ef4444;
}

.vote-bar {
  height: 16rpx;
  background-color: #fee2e2;
  border-radius: 8rpx;
  overflow: hidden;
}

.vote-bar-fill {
  height: 100%;
  background-color: #14b8a6;
  transition: width 0.3s;
}

.vote-actions {
  display: flex;
  gap: 16rpx;
}

.vote-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  margin: 0;
  padding: 0;
  line-height: 72rpx;
}

.vote-btn::after {
  border: none;
}

.vote-agree {
  background-color: #14b8a6;
  color: #ffffff;
}

.vote-disagree {
  background-color: #ef4444;
  color: #ffffff;
}

.vote-voted {
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  color: #14b8a6;
}

.map {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.messages {
  max-height: 600rpx;
  background-color: #f8f7f5;
  border-radius: 16rpx;
  padding: 16rpx;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background-color: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  margin: 0;
  padding: 0;
  line-height: 88rpx;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background-color: #f2930d;
  color: #ffffff;
}

.loading-view {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  font-size: 28rpx;
  color: #9ca3af;
}
