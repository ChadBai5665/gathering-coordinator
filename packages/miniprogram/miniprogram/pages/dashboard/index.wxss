.dashboard-page {
  min-height: 100vh;
  background-color: #f8f7f5;
}

.content {
  padding: 32rpx;
  padding-top: 200rpx;
  padding-bottom: 64rpx;
}

.info-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.share-btn {
  min-width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 12rpx;
  border: none;
  background-color: #f0ede8;
  color: #44403c;
  font-size: 24rpx;
  margin: 0;
  padding: 0 20rpx;
}

.share-btn::after {
  border: none;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #6b7280;
}

.info-value {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.code-box {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx 20rpx;
  background-color: #ffedd5;
  border-radius: 16rpx;
}

.code-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #f2930d;
  letter-spacing: 4rpx;
}

.copy-icon {
  font-size: 24rpx;
  color: #7c2d12;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.card-block {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.block-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.block-sub {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.sub-title {
  margin-top: 18rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
}

.form-line {
  margin-top: 16rpx;
  display: flex;
  gap: 12rpx;
}

.form-input {
  flex: 1;
  height: 72rpx;
  border-radius: 12rpx;
  background-color: #f5f5f4;
  font-size: 26rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.list {
  margin-top: 12rpx;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.list-item:last-child {
  border-bottom: none;
}

.list-main {
  min-width: 0;
  flex: 1;
}

.list-title {
  font-size: 28rpx;
  color: #111827;
  font-weight: 500;
}

.list-sub {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.mini-btn {
  min-width: 120rpx;
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 12rpx;
  border: none;
  background-color: #f2930d;
  color: #ffffff;
  font-size: 24rpx;
  margin: 0;
  padding: 0 16rpx;
}

.mini-btn::after {
  border: none;
}

.mini-btn.ghost {
  background-color: #f3f4f6;
  color: #6b7280;
}

.participants {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.participant-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
}

.participant-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #0d94f2, #60a5fa);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  flex-shrink: 0;
}

.participant-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.participant-name {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.button-row {
  margin-top: 16rpx;
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  border-radius: 14rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  margin: 12rpx 0 0;
  padding: 0;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background-color: #f2930d;
  color: #ffffff;
}

.action-btn.secondary {
  background-color: #e2e8f0;
  color: #334155;
}

.map {
  width: 100%;
  height: 420rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.messages {
  max-height: 600rpx;
  background-color: #f8f7f5;
  border-radius: 16rpx;
  padding: 16rpx;
}

.loading-view {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  font-size: 28rpx;
  color: #9ca3af;
}